{
  "name": "nest-starter",
  "private": true,
  "scripts": {
    "clean": "lerna clean",
    "bootstrap": "lerna bootstrap",
    "test": " cross-env CI=true lerna run test:watch --stream --parallel",
    "start": "cross-env TZ=UTC lerna run --parallel start:dev",
    "start:server": "cross-env lerna run --parallel --ignore @nest-starter/client start:dev",
    "start:server:prod": "lerna run --parallel --ignore @nest-starter/client start",
    "build": "node --max-old-space-size=1900 ./node_modules/.bin/lerna run build",
    "release:patch": "lerna version patch"
  },
  "devDependencies": {
    "prettier": "^2.0.5",
    "@types/node": "^10.12.12",
    "lerna": "^3.20.2",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.3",
    "husky": "^4.2.5",
    "cross-env": "^7.0.2"
  },
  "workspaces": [
    "packages/*"
  ]
}
